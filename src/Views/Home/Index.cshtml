@section Scripts {
    <environment names="Development">
        <script src="~/theme/js/home_info.js" asp-append-version="true"></script>
    </environment>
    <environment names="Staging,Production">
        <script src="~/js/home.min.js" asp-append-version="true"></script>
    </environment>

    <script>
        $(function () {
            $(".video-thumbnail").click(function () {
                var videoSrc = $(this).data("videoSrc");
                var thumb = $(this).children('img');
                $(this).replaceWith('<iframe src="' + videoSrc + 
                '" width="' + thumb.width() + 
                '" height="' + thumb.height() + '" allowFullScreen frameBorder="0"></iframe>');
            });
    });
    </script>
